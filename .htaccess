# Mostrar todos los errores PHP
php_flag display_errors On
php_value error_reporting E_ALL

# 1) Activa reescritura
RewriteEngine On
RewriteBase /

# 2) Si ya existe el archivo o directorio, sírvelo sin tocarlo
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 3) Para la raíz del subdominio, carga public/index.php
RewriteRule ^$ public/index.php [L]

# 4) Para todo lo demás, reescribe a public/...
RewriteRule ^(.*)$ public/$1 [L]
